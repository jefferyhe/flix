<header id="content-header">
  <h1>New Review for <%= link_to(@movie.title, @movie)%></h1>
</header>


<%= form_for([@movie, @review]) do |r| %>
  <%= render "shared/errors", object: @review %>
  <fieldset>
    <ol>
      <li class="required">
        <%= r.label :name %>
        <%= r.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required stars">
        <%= r.label :stars %>
        <%= r.select :stars, Review::STARS, prompt: "Pick One" %>
      </li>
      <li class="required">
        <%= r.label :comment %>
        <%= r.text_area :comment, cols: 80, placeholder: "What did you think?" %>
      </li>
    </ol>
    <p>
      <%= r.submit 'Post Review'%>
      <%= link_to "Cancel", @movies, class: 'button' %>
    </p>
  </fieldset>
<% end %>